
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>
    <h2  class="text-center">Sign up</h2>
    <%= f.input :email, required: true, autofocus: true, input_html: {class: "form-control"}, label: false, placeholder: "E-mail" %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: {class: "form-control"}, label:false, placeholder: "Password"%>
    <%= f.input :password_confirmation, required: true, input_html: {class: "form-control"}, label: false, placeholder: "Password confirmation" %>
    <%= f.button :submit, "Sign up", class: "btn btn-primary", class: "btn btn-primary btn-lg btn-block" %>
  
<% end %>

<%= render "devise/shared/links" %>



<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>
   <h2 class="text-center">Edit <%= resource_name.to_s.humanize %></h2>
    <%= f.input :email, required: true, autofocus: true, input_html: {class: "form-control"}, label: false, placeholder: "Email" %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, autocomplete: "off", required: false, input_html: {class: "form-control"}, label: false, placeholder:"Password" %>
    <%= f.input :password_confirmation, required: false, input_html: {class: "form-control"}, label: false, placeholder: "Password confirmation" %>
    <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true, input_html: {class: "form-control"}, label: false, placeholder: "Current password"  %>
    <%= f.button :submit, "Update", class: "btn btn-primary", class: "btn btn-primary btn-lg btn-block" %>
 
<% end %>

<h3 class="text-danger" class="alert-link">Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>

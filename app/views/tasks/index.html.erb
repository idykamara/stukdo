<p id="notice"><%= notice %></p>

<h1 class="text-center">Tasks</h1>
<div  class="jumbotron">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.content %></td>
        <td class="glyphicon-plus"><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<h3 class="text-center"><%= link_to 'New Task', new_task_path %></h3>